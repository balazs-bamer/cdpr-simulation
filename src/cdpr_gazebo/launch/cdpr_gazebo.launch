<?xml version="1.0"?>
<launch>
  <arg name="paused" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="use_sim_time" default="true"/>
  
  <!-- Launch Gazebo with empty world-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="verbose" value="true" />
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
  </include >
  
  <!-- spawn robot -->
  <node name="cdpr_gazebo_simulator" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-sdf -model cube -file $(find cdpr_gazebo)/sdf/cube.sdf -x 0.0 -y -0.0 -z 0.0 -R 0.0 -P 0.0 -Y 0.0">
    <param name="publishPeriod"       value="0.0" />
    <param name="velocityEpsilon"     value="0.001" />
    <param name="velocityControllerP" value="20.0" />
    <param name="velocityControllerI" value="0.0" />
    <param name="velocityControllerD" value="0.0" />
<!-- Tu=0.76 s at Ku=50, Ziegler-Nichols no overshoot-->
    <param name="positionControllerP" value="10.0" /> 
    <param name="positionControllerI" value="26.31" />
    <param name="positionControllerD" value="2.53" />
<!-- Tu=1.1 s at Ku=20, Ziegler-Nichols classic PID
    <param name="positionControllerP" value="12.0" /> 
    <param name="positionControllerI" value="21.81" />
    <param name="positionControllerD" value="1.65" /-->
  </node>
  
  <!-- load model description -->
  <rosparam file="$(find cdpr_gazebo)/sdf/cube.yaml" command="load" ns="model"/>    
</launch>
